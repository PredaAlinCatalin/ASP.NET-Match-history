@model DAWProject.Models.PlayerStatPlayerViewModel
@{
    ViewBag.Title = "Create";
}

<h2>ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Player", method: FormMethod.Post))
{
    @Html.HiddenFor(m => m.UserId)

    @Html.Label("Name", "Name:")
    <br />
    @Html.TextBoxFor(b => b.Name, null, new { placeholder = "Type in the player's name", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
    <br />

    @Html.Label("NrWins", "NrWins:")
    <br />
    @Html.TextBoxFor(b => b.NrWins, null, new { placeholder = "Type in the player's name", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.NrWins, "", new { @class = "text-danger" })
    <br />

    @Html.Label("NrLosses", "NrLosses:")
    <br />
    @Html.TextBoxFor(b => b.NrLosses, null, new { placeholder = "Type in the player's name", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.NrLosses, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Division", "Division:")
    <br />
    @Html.DropDownListFor(p => p.DivisionId, new SelectList(ViewBag.DivisionList, "Value", "Text"), "Choose a division", new { @class = "form-control" })
    @Html.ValidationMessageFor(p => p.DivisionId, "", new { @class = "text-danger" })
    <br />
    <br />

    <br />
    <button class="btn btn-primary" type="submit">Create</button>
}



