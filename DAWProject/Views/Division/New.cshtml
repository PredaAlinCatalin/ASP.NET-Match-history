@model DAWProject.Models.Division
@{
    ViewBag.Title = "Create";
}

<h2>ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Division", method: FormMethod.Post))
{
    @Html.HiddenFor(m => m.UserId)

    @Html.Label("Name", "Name:")
    <br />
    @Html.TextBoxFor(b => b.Name, null, new { placeholder = "Type in the attribute's name", @class = "form-control" })
    @Html.ValidationMessageFor(b => b.Name, "", new { @class = "text-danger" })
    <br />

    <br />
    <button class="btn btn-primary" type="submit">Create</button>
}



